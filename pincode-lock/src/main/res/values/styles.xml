<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="pincodelock_pinStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/pincodelock_pin_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pincodelock_ripple_effect</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>
    <style name="pincodelock_pinNumberStyle" parent="pincodelock_pinStyle">
        <item name="android:textSize">@dimen/pincodelock_pin_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pincodelock_text_color</item>
    </style>

    <style name="pinRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/pincodelock_pinRow_minHeight</item>
        <item name="android:maxHeight">@dimen/pincodelock_pinRow_maxHeight</item>
        <item name="android:layout_marginLeft">@dimen/pincodelock_pinRow_marginHorizontal</item>
        <item name="android:layout_marginRight">@dimen/pincodelock_pinRow_marginHorizontal</item>
        <!--<item name="android:layout_marginTop">@dimen/pincodelock_pinRow_marginVertical</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/pincodelock_pinRow_marginVertical</item>-->
    </style>
</resources>
